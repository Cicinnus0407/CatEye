<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/sp_16"
        tools:text="电影院名称" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_cinema_name"
        android:layout_alignTop="@id/tv_cinema_name"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_toRightOf="@id/tv_cinema_name"
        android:gravity="center_vertical"
        tools:text="18.9元起" />


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_cinema_name"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        tools:text="0.8km" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cinema_name"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toLeftOf="@id/tv_distance"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/sp_12"
        tools:text="地址...." />

    <LinearLayout
        android:id="@+id/ll_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal">


    </LinearLayout>


    <TextView
        android:id="@+id/tv_platform_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_promotion"
        android:layout_marginTop="@dimen/dp_6"
        android:drawableLeft="@drawable/ic_label_benefit"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_12"
        tools:text="阿诗丹顿" />

    <TextView
        android:id="@+id/tv_merchant_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_platform_activity"
        android:layout_marginTop="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_label_merchart"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_12"
        tools:text="阿诗丹顿" />

    <TextView
        android:id="@+id/tv_card_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_merchant_activity"
        android:layout_marginTop="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_label_card"
        android:drawablePadding="@dimen/dp_6"
        android:textSize="@dimen/sp_12" />


</RelativeLayout>
